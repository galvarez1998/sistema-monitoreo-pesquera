# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fishery_monitoring
DB_USER=postgres
DB_PASSWORD=your_password
DB_POOL_MAX=20
DB_POOL_MIN=2

# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3001

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_must_be_at_least_32_characters_long
JWT_EXPIRE=24h

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Email Configuration (for alerts)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# SMS Configuration (Twilio example)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Configuration (Twilio WhatsApp)
WHATSAPP_ENABLED=false
WHATSAPP_PHONE_NUMBER=+1234567890

# MQTT Configuration (for IoT sensors)
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Alert Thresholds (default values)
TEMP_MIN=20
TEMP_MAX=30
PH_MIN=6.5
PH_MAX=8.5
OXYGEN_MIN=5
OXYGEN_MAX=12
CONDUCTIVITY_MIN=0
CONDUCTIVITY_MAX=2000
TURBIDITY_MAX=50
WATER_LEVEL_MIN=50
WATER_LEVEL_MAX=100
